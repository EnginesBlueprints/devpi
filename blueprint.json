    "environment_variables": [
      {
        "name": "internal_only",
        "value": "false",
        "mandatory": true,
        "ask_at_build_time": true,
        "input": {
          "type": "checkbox_boolean",
          "label": "use internal to engines"
        }
      }
    ],
    "actionators": [
      {
        "name": "show_status",
        "label": "Show status",
        "return_type": "plain_text",
        "script": {
          "language": "sh",
          "content": "#!/bin/sh\r\n\r\n. /home/app/venv/bin/activate\r\n\r\ndevpi-server --status  --serverdir /home/fs/repo/devpi-server/"
        }
      },
      {
        "name": "show_log",
        "label": "Show log",
        "return_type": "plain_text",
        "script": {
          "content": "#!/bin/sh\r\n\r\n. /home/app/venv/bin/activate\r\n\r\ndevpi-server --log  --serverdir /home/fs/repo/devpi-server/"
        }
      },
      {
        "name": "list_users",
        "label": "List user",
        "return_type": "plain_text",
        "script": {
          "content": "#!/bin/sh\r\n\r\n. /home/app/venv/bin/activate\r\n\r\n  /home/home_dir/.local/bin/devpi use http://$fqdn/\r\n /home/home_dir/.local/bin/devpi user -l"
        }
      },
      {
        "name": "set_user_password",
        "label": "Set User Password",
        "return_type": "plain_text",
        "variables": [
          {
            "name": "user_name",
            "mandatory": true,
            "input": {
              "type": "select_with_input",
              "collection": {
                "items": {
                  "root": "root"
                }
              }
            }
          },
          {
            "name": "password",
            "mandatory": true,
            "input": {
              "type": "password_with_confirmation"
            }
          }
        ],
        "script": {
          "content": "#!/usr/bin/expect\r\n\r\nset timeout 20\r\n\r\nspawn devpi-server --passwd $env(user_name)  --serverdir /home/fs/repo/devpi-server/\r\n\r\n\r\nexpect \"enter password for $env(user_name):\" { send \"$env(password)\\r\" }\r\nexpect \"repeat password for $env(user_name):\" { send \"$env(password)\\r\" }\r\nexpect eof\r\n\r\n#interact\r\n"
        }
      },
      {
        "name": "create_user",
        "return_type": "plain_text",
        "variables": [
          {
            "name": "root_password",
            "input": {
              "type": "password"
            }
          },
          {
            "name": "user_name",
            "mandatory": true,
            "input": {
              "type": "string"
            }
          },
          {
            "name": "user_password",
            "input": {
              "type": "password_with_confirmation"
            }
          }
        ],
        "script": {
          "language": "sh",
          "content": "#!/usr/bin/expect\r\n\r\nset timeout 20\r\nspawn devpi use http://localhost:8000\r\nspawn devpi login root\r\n\r\n\r\nexpect \"password for user root:\" { send \"$env(password)\\r\" }\r\n\r\nexpect eof\r\n\r\nspawn devpi user -c $env(user_name) email=$env(email) password=$env(user_password)\r\n#interact\r\n"
        }
      },
      {
        "name": "create_index",
        "return_type": "plain_text",
        "variables": [
          {
            "name": "index_path",
            "input": {
              "type": "string"
            }
          },
          {
            "name": "bases",
            "input": {
              "type": "string"
            }
          },
          {
            "name": "volatile",
            "input": {
              "type": "select",
              "collection": {
                "items": {
                  "False": "False",
                  "True": "True"
                }
              }
            }
          }
        ],
        "script": {
          "language": "sh",
          "content": "#!/usr/bin/expect\r\n\r\nset timeout 20\r\nspawn devpi use http://localhost:8000\r\nspawn devpi login root\r\n\r\n\r\nexpect \"password for user root:\" { send \"$env(root_password)\\r\" }\r\n\r\nexpect eof\r\n\r\nspawn devpi index -c $env(index_path) bases=$env(bases) volatile=$env(volatile)\r\n#interact\r\n"
        }
      }
